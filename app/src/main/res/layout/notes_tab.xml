<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        cardview:cardElevation="5.5dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#b2dfe4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_no1"
                android:text="01"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                android:fontFamily="sans-serif" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:id="@+id/lesson_name1"
                android:layout_toRightOf="@+id/lesson_no1"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        cardview:cardElevation="5dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#b2dfe4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_no2"
                android:text="02"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arduino"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:id="@+id/lesson_name2"
                android:layout_toRightOf="@+id/lesson_no2"
                />
        </RelativeLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card3"
        android:layout_below="@+id/card2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        cardview:cardElevation="4.5dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#b2dfe4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_no3"
                android:text="03"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tool Requirements"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:id="@+id/lesson_name3"
                android:layout_toRightOf="@+id/lesson_no3"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card4"
        android:layout_below="@+id/card3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2.5dp"
        cardview:cardElevation="4dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#b2dfe4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_no4"
                android:text="04"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Software Requirements"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:id="@+id/lesson_name4"
                android:layout_toRightOf="@+id/lesson_no4"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card5"
        android:layout_below="@+id/card4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        cardview:cardElevation="3.5dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#b2dfe4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_no5"
                android:text="05"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Getting Started: Coding"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:id="@+id/lesson_name5"
                android:layout_toRightOf="@+id/lesson_no5"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card6"
        android:layout_below="@+id/card5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2.5dp"
        cardview:cardElevation="3.5dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#b2dfe4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_no6"
                android:text="06"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simple programs"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:id="@+id/lesson_name6"
                android:layout_toRightOf="@+id/lesson_no6"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card7"
        android:layout_below="@+id/card6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        cardview:cardElevation="3.5dp"
        cardview:cardCornerRadius="5dp"
        cardview:cardBackgroundColor="#b2dfe4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_no7"
                android:text="07"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_alignParentTop="true"
                android:textSize="32sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miscelleneous"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:id="@+id/lesson_name7"
                android:layout_toRightOf="@+id/lesson_no7"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
    </ScrollView>
